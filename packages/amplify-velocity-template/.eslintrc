{
  "plugins": ["react"],
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "arrowFunctions": true,
    "modules": true,
    "module": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "quotes": [ 2, "single", "backtick" ],
    "no-underscore-dangle": false,
    "no-use-before-define": ["var"]
  },
  "globals": {
    "context": true
  }
}
