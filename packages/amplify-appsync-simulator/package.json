{
  "name": "amplify-appsync-simulator",
  "version": "1.2.0",
  "description": "An AppSync Simulator to test AppSync API.",
  "main": "lib/index.js",
  "scripts": {
    "copy-assets": "rm -rf ./public && cp -R ../amplify-graphiql-explorer/build ./public",
    "build": "yarn copy-assets && tsc",
    "clean": "rm -rf ./lib",
    "watch": "tsc -w",
    "start": "node ./lib/index.js",
    "test": "jest",
    "test-ci": "jest"
  },
  "keywords": [
    "graphql",
    "appsync",
    "aws",
    "simulator"
  ],
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "dependencies": {
    "amplify-velocity-template": "1.0.3",
    "array-from": "^2.1.1",
    "cors": "^2.8.5",
    "event-to-promise": "^0.8.0",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "graphql": "^0.13.2",
    "graphql-iso-date": "^3.6.1",
    "graphql-scalars": "^1.0.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^4.0.4",
    "graphql-type-json": "^0.3.0",
    "ip": "^1.1.5",
    "json5": "^2.1.0",
    "jwt-decode": "^2.2.0",
    "libphonenumber-js": "^1.7.18",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "moment-jdateformatparser": "^1.2.1",
    "moment-timezone": "0.5.26",
    "mqtt": "3.0.0",
    "mqtt-connection": "4.0.0",
    "nanoid": "2.1.0",
    "pino": "5.13.2",
    "portfinder": "^1.0.21",
    "qlobber": "3.1.0",
    "retimer": "2.0.0",
    "steed": "^1.1.3",
    "uuid": "^3.3.3",
    "websocket-stream": "^5.5.0",
    "js-string-escape": "^1.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/graphql": "^0.13.4",
    "@types/jest": "^24.0.16",
    "@types/moment-timezone": "0.5.12",
    "@types/node": "^8.10.59",
    "@types/pino": "4.7.1",
    "amplify-graphiql-explorer": "1.0.3",
    "aws-sdk": "^2.580.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "~3.6.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testURL": "http://localhost/",
    "testRegex": "(src/__tests__/.*.test.*)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
