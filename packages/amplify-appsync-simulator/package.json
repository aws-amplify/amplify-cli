{
  "name": "@aws-amplify/amplify-appsync-simulator",
  "version": "2.6.1",
  "description": "An AppSync Simulator to test AppSync API.",
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-amplify/amplify-cli.git",
    "directory": "packages/amplify-appsync-simulator"
  },
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "keywords": [
    "graphql",
    "appsync",
    "aws",
    "simulator"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "copy-assets": "yarn rimraf ./public && yarn copyfiles -u 3 \"../amplify-graphiql-explorer/build/**/*\" ./public",
    "build": "yarn copy-assets && tsc",
    "build-tests": "tsc --build tsconfig.tests.json",
    "clean": "rimraf ./lib tsconfig.tsbuildinfo tsconfig.tests.tsbuildinfo node_modules",
    "watch": "tsc -w",
    "start": "node ./lib/index.js",
    "test": "jest --logHeapUsage --forceExit"
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.3.1",
    "@graphql-tools/utils": "^8.5.1",
    "amplify-velocity-template": "1.4.8",
    "aws-sdk": "^2.1169.0",
    "chalk": "^4.1.1",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "express": "^4.17.3",
    "get-port": "^5.1.1",
    "graphql": "^14.5.8",
    "graphql-iso-date": "^3.6.1",
    "graphql-subscriptions": "^1.1.0",
    "ip": "^1.1.5",
    "js-string-escape": "^1.0.1",
    "jwt-decode": "^2.2.0",
    "libphonenumber-js": "1.9.47",
    "lodash": "^4.17.21",
    "moment": "^2.24.0",
    "moment-jdateformatparser": "^1.2.1",
    "moment-timezone": "0.5.35",
    "promise-toolbox": "^0.20.0",
    "slash": "^3.0.0",
    "uuid": "^8.3.2",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@aws-amplify/amplify-graphiql-explorer": "2.5.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/node": "^12.12.6",
    "@types/ws": "^8.2.2",
    "jsonwebtoken": "^8.5.1"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/*.d.ts"
    ],
    "testURL": "http://localhost/",
    "testRegex": "(src/__tests__/.*.test.ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
