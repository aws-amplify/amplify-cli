{
  "name": "amplify-appsync-simulator",
  "version": "0.14.0",
  "description": "An AppSync Simulator to test AppSync API.",
  "main": "lib/index.js",
  "scripts": {
    "copy-assets": "rm -rf ./public && cp -R ../amplify-graphiql-explorer/build ./public",
    "build": "yarn copy-assets && tsc",
    "clean": "rm -rf ./lib",
    "watch": "tsc -w",
    "start": "node ./lib/index.js",
    "prettier": "prettier --config ../../.prettierrc --write src/**/*.ts",
    "test": "jest",
    "test-ci": "jest"
  },
  "keywords": [
    "graphql",
    "appsync",
    "aws",
    "simulator"
  ],
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "dependencies": {
    "@conduitvc/mosca": "^2.8.3",
    "amplify-velocity-template": "0.13.0",
    "cors": "^2.8.5",
    "dateformat": "^3.0.3",
    "event-to-promise": "^0.8.0",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "graphql": "^0.13.2",
    "graphql-iso-date": "^3.6.1",
    "graphql-scalars": "^1.0.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^4.0.4",
    "graphql-type-json": "^0.3.0",
    "ip": "^1.1.5",
    "json5": "^2.1.0",
    "jwt-decode": "^2.2.0",
    "libphonenumber-js": "^1.7.18",
    "lodash": "^4.17.15",
    "portfinder": "^1.0.21",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/graphql": "^0.13.4",
    "@types/jest": "^24.0.16",
    "@types/mosca": "^2.8.1",
    "@types/node": "^8.10.51",
    "amplify-graphiql-explorer": "0.14.0",
    "aws-sdk": "^2.510.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testURL": "http://localhost/",
    "testRegex": "(src/__tests__/.*.test.*)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
