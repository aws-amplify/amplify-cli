{
  "name": "amplify-ui-tests",
  "version": "2.13.1",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "ui": "npm run setup-profile && jest --maxWorkers=3",
    "setup-profile": "tsc && node ./lib/configure_tests.js",
    "build": "tsc",
    "clean": "rm -rf ./lib",
    "config": "tsc && node ./lib/configure_tests.js && node ./lib/main/setup_aws_resources.js",
    "delete": "node ./lib/main/delete.js"
  },
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "@types/nexpect": "0.4.30",
    "@types/node": "^10.17.13",
    "dotenv": "8.2.0",
    "jest": "23.1.0",
    "jest-junit": "^8.0.0",
    "nexpect": "0.6.0",
    "rimraf": "3.0.0",
    "ts-jest": "22.4.6",
    "typescript": "~3.6.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testURL": "http://localhost",
    "testRegex": "(__tests__/.*.test.*)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "src"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports/junit/",
    "outputName": "js-test-results.xml",
    "usePathForSuiteName": "true",
    "addFileAttribute": "true"
  }
}
