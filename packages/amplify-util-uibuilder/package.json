{
  "name": "@aws-amplify/amplify-util-uibuilder",
  "version": "1.2.1",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest"
  },
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@aws-amplify/codegen-ui": "1.2.0",
    "@aws-amplify/codegen-ui-react": "1.2.0",
    "amplify-cli-core": "2.4.7",
    "amplify-prompts": "1.6.2",
    "amplify-provider-awscloudformation": "5.8.8",
    "aws-sdk": "^2.1042.0"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "preset": "ts-jest",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**",
      "!src/__tests__/**",
      "!lib/**"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost/",
    "testRegex": "(src/(__tests__|__e2e__|__e2e_v2__)/.*.test.ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports/junit/",
    "outputName": "js-test-results.xml",
    "usePathForSuiteName": "true",
    "addFileAttribute": "true"
  }
}
