{
  "extends": "nx/presets/npm.json",
  "npmScope": "amplify-cli",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "test",
          "lint",
          "package",
          "prepare",
          "extract-api"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "inputs": [
        "{projectRoot}/**/*",
        "!{projectRoot}/**/*.md"
      ]
    },
    "extract-api": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "{projectRoot}/src/**/*",
        "!{projectRoot}/src/__tests__/**/*",
        "!{projectRoot}/API.md"
      ],
      "outputs": [
        "{projectRoot}/API.md"
      ]
    }
  },
  "targetDependencies": {
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "prepare": [
      {
        "target": "prepare",
        "projects": "dependencies"
      }
    ],
    "package": [
      {
        "target": "package",
        "projects": "dependencies"
      }
    ]
  },
  "affected": {
    "defaultBase": "dev"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  }
}
